export IPINTERACTIVE=0
export WSAUTOMATED=2

UPDATELISTFILE="updatelist"

[ ! -z "$1" ] && echo $1 | grep -e "^-" -e "^help$" >/dev/null && echo -e "USAGE: $0 [LIST_OUTFILE]\n" && exit 1

[ ! -z "$1" ] && UPDATELISTFILE=$1
UPDATELISTFILEXML="${UPDATELISTFILE}.xml"

echo "wsl enum DCIM_SoftwareIdentity -filter \"select * from DCIM_SoftwareIdentity where Status='Installed'\""
wsl enum DCIM_SoftwareIdentity -filter "select * from DCIM_SoftwareIdentity where Status='Installed'"
if [ ! -s response.xml ]; then
  echo -e "\nERROR: empty response file\n"
  exit 1
else
  echo "## List of InstanceID, assign DUP file to each to be used for update. See ${UPDATELISTFILEXML} for descriptions." >${UPDATELISTFILE}
  cat response.xml | grep InstanceID | cut -d'>' -f2 | cut -d'<' -f1 | sed 's/$/=/' >>${UPDATELISTFILE}
  /bin/cp -f response.xml ${UPDATELISTFILEXML}
  echo "list of InstanceID saved to ${UPDATELISTFILE}"
fi

exit 0
